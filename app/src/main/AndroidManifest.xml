<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anuki.book_lovers_app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".ui.login.SignUpActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.login.ProfileActivity" />
        <activity android:name=".ui.menu.MenuActivity" />
        <activity android:name=".ui.books.BooksMenuActivity" />
        <activity android:name=".ui.comics.ComicsMenuActivity" />
        <activity android:name=".ui.books.ListBookActivity" />
        <activity android:name=".ui.books.BookDetailsActivity" />
        <activity android:name=".ui.books.CreateBookActivity" />
        <activity android:name=".ui.books.ListCommentsBooksActivity" />
        <activity android:name=".ui.books.CommentBookDetailActivity" />
        <activity android:name=".ui.comics.ListComicActivity" />
        <activity android:name=".ui.comics.ComicDetailsActivity" />
        <activity android:name=".ui.comics.CreateComicActivity" />
        <activity android:name=".ui.comics.ListCommentsComicsActivity" />
        <activity android:name=".ui.books.CreateBookCommentActivity" />
        <activity android:name=".ui.comics.CommentComicDetailActivity" />
    </application>

</manifest>